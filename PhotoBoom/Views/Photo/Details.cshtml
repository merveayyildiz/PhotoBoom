@model PhotoBoom.Models.Concrete.Photo

@{
    ViewData["Title"] = "Details";
}
<style>
    #title {
        font-size: 250%;
    }

    #center {
        text-align: center;
    }
</style>

<div id="center">
    <form method="post">
        <dl class="row">
            <dd class="col-sm-10" id="title" style="font-display:initial">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dd class="col-sm-10">
                Tags: 
                @foreach (var item in Model.Tags)
                    {
                       @Html.DisplayFor(modelItem => item.Name)
                           
                    }
            </dd>
            <dd class="col-sm-10" style="line-height:20">
                <img src="@("~/img/"+Model.ImageName)" asp-append-version="true" width="250px" height="250px" />
            </dd>
            <dd class="col-sm-10">

                <a href="/Photo/Delete/@Model.Id" onclick="return confirm('Are you sure you want to delete this?')">Delete Photo</a>

            </dd>
        </dl>
    </form>
</div>

<script type="text/javascript">
    function Confirm() {
        var input = $("<input />");
        input.attr("type", "hidden").attr("name", "confirm_value");
        if (confirm("Are you sure you want to delete the photo?")) {
            return true;
        } else {
            return false;
        }
    }
</script>





